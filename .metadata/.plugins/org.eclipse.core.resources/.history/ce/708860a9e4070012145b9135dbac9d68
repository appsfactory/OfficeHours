package ca.communitech.appsfactory.waldo;

import java.io.FileInputStream;
import java.io.FileNotFoundException;

import android.os.Bundle;
import android.app.Activity;
import android.content.Context;
import android.content.Intent;
import android.view.Menu;

public class SignInChecker extends Activity {

    @Override
    public void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_sign_in_checker);
        //TODO Check if password works and shit.
        try {
			FileInputStream fis = openFileInput("auth_string");
			byte [] bytes;
			fis.read(bytes);
			String auth_string = bytes.toString();
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
        
        
        Intent logged_in_intent = new Intent(this, Log_In.class);
		startActivity(logged_in_intent);
		finish();
        
    }

    @Override
    public boolean onCreateOptionsMenu(Menu menu) {
        getMenuInflater().inflate(R.menu.activity_sign_in_checker, menu);
        return true;
    }
}
